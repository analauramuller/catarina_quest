{
  "compilerOptions": {
    "baseUrl": "./src",  // Define o diretório base para resolução de módulos
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
 "include": [
  "src/**/*",
  "src/shims-vue.d.ts"
],
  "exclude": [
    "node_modules",
    "dist"
  ]
}